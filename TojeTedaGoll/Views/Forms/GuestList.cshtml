@model IEnumerable<TojeTedaGoll.Models.Guest>

@{
    Layout = "~/Views/Shared/_Layout_Vertical.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GuestList</title>
</head>
<body>
    <div class="page-content-panel">

            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary"})
    
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Coming)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NotComming)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SleepOver)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NumPersons)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DontSleepOver)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.YesBowTie)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NoBowTie)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Coming)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NotComming)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SleepOver)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumPersons)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DontSleepOver)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.YesBowTie)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NoBowTie)
                        </td>
                        <td>
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id})
                        </td>
                    </tr>

                }

            </tbody>
        </table>
    </div>
</body>
</html>
